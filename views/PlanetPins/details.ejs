<% layout('layout/boilerplate') %>
    <div class="row" >
        <div class="<%= currentUser? 'col-6': 'col-12'%>" >
            <div class="card mb-3">
                <img src="<%= pin.image %>" class="card-img-top" alt="..." style="max-width: 100rem; max-height: 80rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= pin.title %></h5>
                    <p class="card-text"><%= pin.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted"><%= pin.location %></li>
                    <li class="list-group-item text-muted">Submitted by: <%= pin.author.username %></li>
                    <li class="list-group-item">$<%= pin.price %>/night</li>
                </ul>
                <% if(currentUser && pin.author.equals(currentUser._id)){ %>
                    <div class="card-body">
                        <a class="card-link btn btn-primary" href="/earthExplorer/<%= pin._id %>/edit">Edit</a>
                        <form class="d-inline" action="/earthExplorer/<%= pin._id %>?_method=Delete" method="POST">
                            <button class="btn btn-danger" >Delete</button>
                        </form>
                    </div>
                <% } %>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
        <% if(currentUser){ %>
            <div class="col-6" >
                <h2 style="font-weight: 700;">Leave a Review</h2>
                <form action="/earthExplorer/<%= pin._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" class="form-range" name="review[rating]" id="rating" min=1 max=5>
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
                <% for (let r of pin.reviews){ %>
                    <div class="card mb-3">
                        <div class="mb-3 card-body">
                            <h5 class="card-title">Rating: <%= r.rating %></h5>
                            <h6 class="card-subtitle mb-2 text-muted">By <%= r.author.username %></h6>
                            <p>Review: <%= r.body %></p>
                            <% if(currentUser && r.author.equals(currentUser._id)){ %>
                                <form action="/earthExplorer/<%= pin._id %>/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>