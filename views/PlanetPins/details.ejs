<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css">
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const pin = '<%- JSON.stringify(pin) %>';
</script>

<div class="row" style="width: 90%; margin: auto; max-height: 80%; overflow-y: auto; margin-bottom: 0;">
    <div class="<%= (pin.reviews.length > 0 || currentUser)? 'col-7': 'col-9'%>" >
        <div class="card h-100">
            <div id="planetPinCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% pin.images.forEach((img, i) => { %>
                        <div class="carousel-item <%= i === 0? "active": "" %>">
                            <img src="<%= img.url %>" class="d-block" style="max-height: 45vh; width: 100%;" alt="" >
                        </div>
                    <% }) %>
                </div>
    
                <% if(pin.images.length > 1){ %>
                    <button class="carousel-control-prev" href="#planetPinCarousel" type="button" data-bs-target="#planetPinCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" href="#planetPinCarousel" type="button" data-bs-target="#planetPinCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                <% } %>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= pin.title %></h5>
                <p class="card-text"><%= pin.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= pin.location %></li>
                <li class="list-group-item text-muted">Submitted by: <%= pin.author.username %></li>
                <li class="list-group-item">$<%= pin.price %>/night</li>
            </ul>
            <% if(currentUser && pin.author.equals(currentUser._id)){ %>
                <div class="card-body">
                    <a class="card-link btn btn-primary" href="/earthExplorer/<%= pin._id %>/edit">Edit</a>
                    <form class="d-inline" action="/earthExplorer/<%= pin._id %>?_method=Delete" method="POST">
                        <button class="btn btn-danger" >Delete</button>
                    </form>
                </div>
            <% } %>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
    <div class="<%= (pin.reviews.length > 0 || currentUser)? 'col-5': 'col-3'%>" >
        <div class="card h-100">
            <div id='map' style='width: 100%; height: 25vh; margin-bottom: 2vh; '></div>
            <% if(currentUser || pin.reviews.length != 0){ %>
                <div style="margin: 0 1vw 0 1vw;">
                    <% if(currentUser){ %>
                        <h3 style="font-weight: 700; text-align: center;" class="mb-4">Write a Review</h3>
                        <form action="/earthExplorer/<%= pin._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
                            <div class="d-flex" style="align-items: center; height: 30px; margin-right: 20px;">
                                <p style="font-weight: 700; font-size: medium;">Review Text</p>
                                <div style="margin-left: auto;">
                                    <fieldset class="starability-grow" >
                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="mb-3" style="margin-top: 0;">
                                <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button class="btn btn-success">Submit</button>
                        </form>
                    <% } %>
                    <h3 style="font-weight: 700; text-align: center;" class="mb-4">Review By Others</h3>
                    <div style="max-height: 28vh; overflow-y: auto;">
                        <% for (let r of pin.reviews){ %>
                            <div class="card mb-3">
                                <div class="mb-3 card-body">
                                    <div class="d-flex">
                                        <h5 class="card-title" style="font-weight: 600;"><%= r.author.username %></h5>
                                        <p class="starability-result" data-rating="<%= r.rating %>" style="margin-left: auto;">
                                        Rated: <%= r.rating %> stars
                                        </p>
                                    </div>
                                    <p>Review: <%= r.body %></p>
                                    <% if(currentUser && r.author.equals(currentUser._id)){ %>
                                        <form action="/earthExplorer/<%= pin._id %>/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-danger">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>   
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script src="/javascripts/detailPageMap.js"></script>