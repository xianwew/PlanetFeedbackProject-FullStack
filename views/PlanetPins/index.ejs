<% layout('layout/boilerplate') %>
<div style="display: flex; flex-direction: column;">
    <div style="width: 100%; height: 50vh;" id="cluster-map"></div>
    <div style="width: 65%; margin: auto; margin-top: 5vh">
        <h1 class="mb-4" style="text-align: center; font-weight: 700;">All Planet Pins</h1>
            <% for(let pin of pins){ %>
                <div class="card">
                    <div class="row" >
                        <div class="col-md-4" style="max-height: 20vh; overflow: hidden;">
                            <img class="img-fluid" src="<%= pin.images[0].url %>" alt="image">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body" >
                                <h5 class="card-title"><%= pin.title %></h5>
                                <p class="card-text"><%= pin.description %></p>
                                <p class="card-text"><small class="text-muted"><%= pin.location %></small></p>
                                <a class="btn btn-primary btn-index" style="width: 45%; min-width: min-content;" href="earthExplorer/<%= pin._id %>">View <%= pin.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="margin-bottom: 10px;"></div>
            <% }%>
        <div style="margin-bottom: 20px;"></div>
    </div>
</div>

<script>
