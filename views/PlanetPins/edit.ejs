<% layout('layout/boilerplate') %>
<div class="row" style="width: 70%; align-self: center; margin-top: 10vh;">
    <h1 class="text-center">Edit The Planet Pin</h1>
    <div class="col-12">
        <form action="/earthExplorer/<%= pin._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">title</label>
                <input class="form-control" type="text" id="title" name="earthExplorer[title]"  value="<%= pin.title %>" required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="location">location</label>
                <input class="form-control" type="text" id="location" name="earthExplorer[location]"  value="<%= pin.location %>" required>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>

            <div class="mb-3 custom-file">
                <label class="form-label" for="image">Add Images</label>
                <input class="form-control" type="file" name="image" id="image" multiple>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Planet Pin Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input id="price" type="number" class="form-control" placeholder="0.00" aria-label="price"
                        aria-describedby="basic-addon1" name="earthExplorer[price]" step="0.01" min="0" max="9999999999999" value="<%= pin.price %>" required>
                </div>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="earthExplorer[description]" rows="8" required><%= pin.description %></textarea>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>

            <% if(pin.images.length > 1){ %>
                <div class="mb-3">
                    <% pin.images.forEach((img, i) => { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" style="max-width: 200px;" alt="" >
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                    <% }) %>
                </div>
            <% } %>

            <div class="mb-3">
                <button class="btn btn-success">Update The Planet Pin</button>
            </div>
        </form>
        <a href="/earthExplorer/<%= pin._id %>">Back To PlanetPin</a>
    </div>
</div>
